@model IEnumerable<ProfsMarkovHub.Models.Article>

@{
    ViewData["Title"] = "Home";
}

<div class="hero rounded-4" style="background: linear-gradient(145deg, rgba(0,102,255,0.5), rgba(0,204,102,0.5)), url('/images/hero-bg.jpg'); background-size: cover; color: white; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); padding: 60px; text-align: center;">
    <h1 class="display-3">Welcome to ProfsMarkov Hub</h1>
    <p>Your hub for AI tools, tech insights, and innovation.</p>
</div>

<div class="latest-blog container mt-5">
    <h2 class="text-center">Latest from Blog</h2>
    <div class="row mt-4 g-3">
        @foreach (var article in Model)
        {
            <div class="col-md-4">
                <div class="glass-card p-3 h-100">
                    <img class="img-fluid rounded mb-2" style="height:180px;width:100%;object-fit:cover;" src="@(string.IsNullOrWhiteSpace(article.ImageUrl) ? "/images/blog-placeholder1.jpg" : article.ImageUrl)" alt="@article.Title">
                    <h5>@article.Title</h5>
                    <p class="text-muted">@article.PublishedAt.ToString("MMM dd, yyyy")</p>
                    <a href="/Blog/Details/@article.Id" class="btn btn-primary">Read More</a>
                </div>
            </div>
        }
    </div>
</div>
