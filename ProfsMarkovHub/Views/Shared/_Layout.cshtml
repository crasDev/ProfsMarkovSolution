<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProfsMarkov Hub</title>

    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "ProfsMarkov Hub")" />
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "Gaming, tech, and code â€” by ProfsMarkov")" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/hero-bg.jpg"))" />
    <meta property="og:url" content="@(ViewData["OgUrl"] ?? Microsoft.AspNetCore.Http.Extensions.UriHelper.GetDisplayUrl(Context.Request))" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/liquid_theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProfsMarkovHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-glass">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProfsMarkov</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Store" asp-action="Index">Store</a></li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-glass">
        <div class="container text-center">
            <div class="footer-social">
                <a href="https://www.twitch.tv/profs_markov" target="_blank" title="Twitch">ğŸ® Twitch</a>
                <a href="https://bsky.app/profile/profsdk.bsky.social" target="_blank" title="Bluesky">ğŸ¦‹ Bluesky</a>
                <a href="https://x.com/ProfsMarkov" target="_blank" title="X">ğ• X.com</a>
                <a href="https://github.com/crasDev" target="_blank" title="GitHub">ğŸ’» GitHub</a>
            </div>
            <p>&copy; 2026 ProfsMarkov Hub â€” Gaming, Tech &amp; Code</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
