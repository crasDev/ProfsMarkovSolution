<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProfsMarkov Hub</title>

    <meta name="description" content="@(ViewData["OgDescription"] ?? "Gaming, tech, and code ‚Äî by ProfsMarkov. Streams, reviews, and dev insights.")" />
    <meta name="author" content="ProfsMarkov" />
    <link rel="canonical" href="@(ViewData["OgUrl"] ?? Microsoft.AspNetCore.Http.Extensions.UriHelper.GetDisplayUrl(Context.Request))" />

    <meta property="og:type" content="@(ViewData["OgType"] ?? "website")" />
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "ProfsMarkov Hub")" />
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "Gaming, tech, and code ‚Äî by ProfsMarkov")" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/hero-bg.jpg"))" />
    <meta property="og:url" content="@(ViewData["OgUrl"] ?? Microsoft.AspNetCore.Http.Extensions.UriHelper.GetDisplayUrl(Context.Request))" />
    <meta property="og:site_name" content="ProfsMarkov Hub" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@@ProfsMarkov" />
    <meta name="twitter:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "ProfsMarkov Hub")" />
    <meta name="twitter:description" content="@(ViewData["OgDescription"] ?? "Gaming, tech, and code ‚Äî by ProfsMarkov")" />
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/hero-bg.jpg"))" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Titillium+Web:wght@200;300;400;600;700;900&display=swap" rel="stylesheet">

    <!-- AOS - Animate On Scroll -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/liquid_theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProfsMarkovHub.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Reading progress bar (shown on article pages) -->
    <div id="reading-progress" style="width:0%; display:none;"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-glass" id="mainNav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProfsMarkov</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Store" asp-action="Index">Store</a></li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-glass">
        <div class="container text-center">
            <div class="footer-social">
                <a href="https://www.twitch.tv/profs_markov" target="_blank" title="Twitch">üéÆ Twitch</a>
                <a href="https://bsky.app/profile/profsdk.bsky.social" target="_blank" title="Bluesky">ü¶ã Bluesky</a>
                <a href="https://x.com/ProfsMarkov" target="_blank" title="X">ùïè X.com</a>
                <a href="https://github.com/crasDev" target="_blank" title="GitHub">üíª GitHub</a>
            </div>
            <p>&copy; 2026 ProfsMarkov Hub ‚Äî Gaming, Tech &amp; Code</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- particles.js -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <!-- Typed.js -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.16/dist/typed.umd.js"></script>
    <!-- AOS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
