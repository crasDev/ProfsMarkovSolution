<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProfsMarkovHub</title>

    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "ProfsMarkovHub")" />
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "AI tools, streams and blog updates")" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/hero-bg.jpg"))" />
    <meta property="og:url" content="@(ViewData["OgUrl"] ?? Microsoft.AspNetCore.Http.Extensions.UriHelper.GetDisplayUrl(Context.Request))" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/liquid_theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProfsMarkovHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(145deg, rgba(0,102,255,0.7), rgba(0,204,102,0.7)); box-shadow: 0 4px 6px rgba(0,0,0,0.1), inset 0 -4px 6px rgba(255,255,255,0.2); backdrop-filter: blur(10px);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProfsMarkovHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Store" asp-action="Index">Store</a></li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2026 - ProfsMarkovHub - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
